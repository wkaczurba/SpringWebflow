<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">
      
<!-- input data first -->

<input name="order" required="true" />

<view-state id="takepayment" model="flowScope.newpayment">
  <on-entry>
    <set name="flowScope.newpayment" value="new com.springpizza.domain.Payment()" />
  </on-entry>
  <transition on="pay" to="processPayment" />
  <transition on="cancel" to="cancel" />
</view-state>

<action-state id="processPayment" >
  <!-- cases:  -->
  <evaluate result="order.payment" expression="pizzaFlowActions.verifyPayment(flowScope.newpayment)" />
  <transition to="paymentError" on-exception="com.springpizza.flow.CustomerNotFoundException"/>
  <transition to="paymentDone" />
</action-state>

<view-state id="paymenterror">
  <transition to="cancel" />
</view-state>

<end-state id="paymentDone" />
<end-state id="cancel" />
      
</flow>
